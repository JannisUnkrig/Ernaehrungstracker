<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="end"
    android:id="@+id/drawer"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hintergrund"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="270sp"
                android:background="@drawable/links410x260"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="40sp" />

                <TextView
                    android:id="@+id/tageszieleHeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2sp"
                    android:gravity="center"
                    android:text="@string/tageszieleHeadline"
                    android:textAlignment="center"
                    android:textColor="@color/darkText"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/kcalTrackerLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/curKcal"
                            android:layout_width="70sp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/darkText"
                            android:ems="10"
                            android:hint="0"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/darkText"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/slash1"
                            android:layout_width="10sp"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textAlignment="center"
                            android:textColor="@color/mittelDarkText"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/goalKcal"
                            android:layout_width="70sp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/darkText"
                            android:ems="10"
                            android:hint="@string/ziel"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/darkText"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/kcalTrackerText"
                            android:layout_width="47sp"
                            android:layout_height="wrap_content"
                            android:text="@string/kcal"
                            android:textAlignment="viewStart"
                            android:textColor="@color/mittelDarkText"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fettTrackerLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/curFett"
                            android:layout_width="70sp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/darkText"
                            android:ems="10"
                            android:hint="0"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/darkText"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/slash4"
                            android:layout_width="10sp"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textAlignment="center"
                            android:textColor="@color/mittelDarkText"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/goalFett"
                            android:layout_width="70sp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/darkText"
                            android:ems="10"
                            android:hint="@string/ziel"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/darkText"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/fettTrackerText"
                            android:layout_width="47sp"
                            android:layout_height="wrap_content"
                            android:text="@string/g_fett"
                            android:textAlignment="viewStart"
                            android:textColor="@color/mittelDarkText"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/khTrackerLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/curKh"
                            android:layout_width="70sp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/darkText"
                            android:ems="10"
                            android:hint="0"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/darkText"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/slash3"
                            android:layout_width="10sp"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textAlignment="center"
                            android:textColor="@color/mittelDarkText"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/goalKh"
                            android:layout_width="70sp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/darkText"
                            android:ems="10"
                            android:hint="@string/ziel"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/darkText"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/khTrackerText"
                            android:layout_width="47sp"
                            android:layout_height="wrap_content"
                            android:text="@string/g_kh"
                            android:textAlignment="viewStart"
                            android:textColor="@color/mittelDarkText"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/protTrackerLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/curProt"
                            android:layout_width="70sp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/darkText"
                            android:ems="10"
                            android:hint="0"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/darkText"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/slash2"
                            android:layout_width="10sp"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textAlignment="center"
                            android:textColor="@color/mittelDarkText"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/goalProt"
                            android:layout_width="70sp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/darkText"
                            android:ems="10"
                            android:hint="@string/ziel"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal"
                            android:textAlignment="center"
                            android:textColor="@color/darkText"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/protTrackerText"
                            android:layout_width="47sp"
                            android:layout_height="wrap_content"
                            android:text="@string/g_prot"
                            android:textAlignment="viewStart"
                            android:textColor="@color/mittelDarkText"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:id="@+id/divider7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#9996783C" />

                <TextView
                    android:id="@+id/essenEssenHeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24sp"
                    android:gravity="center"
                    android:text="@string/essen_essen_headline"
                    android:textAlignment="center"
                    android:textColor="@color/darkText"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14sp"
                    android:baselineAligned="false"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="2sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/gerichtAuswählenButton"
                            android:layout_width="160sp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/buttonHell"
                            android:maxHeight="120sp"
                            android:onClick="gerichtAuswaehlenButtonPressed"
                            android:text="@string/gericht_auswaehlen_button"
                            android:textAllCaps="false"
                            android:textColor="#fff"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/entfernenButton"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="20sp"
                            android:layout_marginTop="4dp"
                            android:background="#00000000"
                            android:onClick="entfernenButtonPressed"
                            android:text="@string/entfernenButtonText"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textAppearance="@android:style/TextAppearance.Material"
                            android:textColor="#DD000000"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="7sp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/toAddAmount"
                                android:layout_width="70sp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/darkText"
                                android:ems="10"
                                android:hint="100"
                                android:importantForAutofill="no"
                                android:inputType="numberDecimal"
                                android:textAlignment="center"
                                android:textColor="@color/darkText"
                                android:textSize="14sp"
                                android:imeOptions="actionDone"/>

                            <TextView
                                android:id="@+id/toAddPortionenText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gramm"
                                android:textAlignment="viewStart"
                                android:textColor="@color/mittelDarkText"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/kcalToAddLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7sp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/toAddKcal"
                                android:layout_width="70sp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/darkText"
                                android:ems="10"
                                android:hint="0"
                                android:importantForAutofill="no"
                                android:inputType="numberDecimal"
                                android:textAlignment="center"
                                android:textColor="@color/darkText"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/toAddKcalText"
                                android:layout_width="47sp"
                                android:layout_height="wrap_content"
                                android:text="@string/kcal"
                                android:textAlignment="viewStart"
                                android:textColor="@color/mittelDarkText"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fettToAddLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7sp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/toAddFett"
                                android:layout_width="70sp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/darkText"
                                android:ems="10"
                                android:hint="0"
                                android:importantForAutofill="no"
                                android:inputType="numberDecimal"
                                android:textAlignment="center"
                                android:textColor="@color/darkText"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/toAddFettText"
                                android:layout_width="47sp"
                                android:layout_height="wrap_content"
                                android:text="@string/g_fett"
                                android:textAlignment="viewStart"
                                android:textColor="@color/mittelDarkText"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/khToAddLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7sp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <EditText
                                android:id="@+id/toAddKh"
                                android:layout_width="70sp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/darkText"
                                android:ems="10"
                                android:hint="0"
                                android:importantForAutofill="no"
                                android:inputType="numberDecimal"
                                android:textAlignment="center"
                                android:textColor="@color/darkText"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/toAddKhText"
                                android:layout_width="47sp"
                                android:layout_height="wrap_content"
                                android:text="@string/g_kh"
                                android:textAlignment="viewStart"
                                android:textColor="@color/mittelDarkText"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/protToAddLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7sp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/toAddProt"
                                android:layout_width="70sp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/darkText"
                                android:ems="10"
                                android:hint="0"
                                android:importantForAutofill="no"
                                android:inputType="numberDecimal"
                                android:textAlignment="center"
                                android:textColor="@color/darkText"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/toAddProtText"
                                android:layout_width="47sp"
                                android:layout_height="wrap_content"
                                android:text="@string/g_prot"
                                android:textAlignment="viewStart"
                                android:textColor="@color/mittelDarkText"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/mampfButton"
                    android:layout_width="330sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14sp"
                    android:layout_marginBottom="7sp"
                    android:backgroundTint="@color/buttonDunkel"
                    android:hapticFeedbackEnabled="true"
                    android:onClick="mampfButtonPressed"
                    android:text="@string/mampf_button"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:itemTextColor="@color/mittelDarkText"
        app:menu="@menu/menu_item" />

</androidx.drawerlayout.widget.DrawerLayout>