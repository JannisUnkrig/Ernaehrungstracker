<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <org.apmem.tools.layouts.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14sp"
        android:layout_marginTop="7sp"
        android:layout_marginEnd="14sp"
        android:gravity="bottom|start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hhFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14sp"
            android:text="ein Name"
            android:textAlignment="viewStart"
            android:textColor="@color/darkText"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hhFoodPortionenGramm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 Gramm" />

    </org.apmem.tools.layouts.FlowLayout>

    <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/hhNaehrwerteLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14sp"
        android:layout_marginTop="2sp"
        android:layout_marginEnd="10sp">

        <TextView
            android:id="@+id/hhFoodKcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2654 kcal" />

        <TextView
            android:id="@+id/strich1hh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  |  " />

        <TextView
            android:id="@+id/hhFoodProt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="124 g Prot" />

        <TextView
            android:id="@+id/strich2hh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  |  " />

        <TextView
            android:id="@+id/hhFoodKh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="260 g KH" />

        <TextView
            android:id="@+id/strich3hh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  |  " />

        <TextView
            android:id="@+id/hhFoodFett"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="56 g Fett" />
    </org.apmem.tools.layouts.FlowLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="7dp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp"
        android:background="?android:attr/listDivider" />
</LinearLayout>